{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": ["--use-frame", "--input", "rpi"],
            "justMyCode": false
        },
        {
            "name": "Debug pytest",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": ["-sv"],
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}